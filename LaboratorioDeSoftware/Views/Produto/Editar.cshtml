@model LaboratorioDeSoftware.Core.Entities.Produto
@using static LaboratorioDeSoftware.Core.Entities.Enums.Enums
@using LaboratorioDeSoftware.Tools;

@{
    ViewData["Title"] = "Editar Item";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Editar Item</h4>
    </div>

    <div class="card-body">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Marca fabricante</label>
                        <input asp-for="MarcaFabricante" class="form-control" />
                        <span asp-validation-for="MarcaFabricante" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Modelo" class="control-label"></label>
                        <input asp-for="Modelo" class="form-control" />
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>
                </div>

                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Tipo Produto</label>
                        <select asp-for="TipoProduto" class="form-control" 
                            asp-items="EnumHelper.ToSelectListWithDescriptions<enTipoProduto>()"></select>
                        <span asp-validation-for="TipoProduto" class="text-danger"></span>
                    </div>
                </div>

            <div class="form-group mt-3">
                <label asp-for="Observacoes" class="control-label"></label>
                <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label">Categoria</label>
                        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias">
                        <option value="">Selecione um laboratório</option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
            </div>
        </form>
    </div>
</div>
