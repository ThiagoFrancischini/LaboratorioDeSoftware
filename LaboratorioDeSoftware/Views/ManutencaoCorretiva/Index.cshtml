@model IEnumerable<LaboratorioDeSoftware.Core.Entities.ManutencaoCorretiva>

@{
    ViewData["Title"] = "Manutenções Corretivas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Cadastro" class="btn btn-primary">Registrar Nova Manutenção</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Equipamento</th>
            <th>Problema Apresentado</th>
            <th>Data do Problema</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Equipamento.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.ProblemaApresentado)</td>
                <td>@item.DataProblemaApresentado.ToShortDateString()</td>                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                    <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>