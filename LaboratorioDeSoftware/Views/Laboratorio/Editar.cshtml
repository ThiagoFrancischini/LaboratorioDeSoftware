@model LaboratorioDeSoftware.Core.Entities.Laboratorio

@{
    ViewData["Title"] = "Editar Laboratório";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Editar Laboratório</h4>
    </div>
    <div class="card-body">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Id" />

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Localizacao" class="control-label"></label>
                        <input asp-for="Localizacao" class="form-control" />
                        <span asp-validation-for="Localizacao" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ResponsavelId" class="control-label">Responsável</label>
                        <select asp-for="ResponsavelId" class="form-control" asp-items="ViewBag.Responsaveis">
                            <option value="">Selecione um responsável</option>
                        </select>
                        <span asp-validation-for="ResponsavelId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Observacao" class="control-label"></label>
                        <textarea asp-for="Observacao" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Observacao" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}