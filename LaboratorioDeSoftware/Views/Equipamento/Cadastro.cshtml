@model LaboratorioDeSoftware.Core.Entities.Equipamento

@{
    ViewData["Title"] = "Cadastrar Equipamento";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Cadastrar Novo Equipamento</h4>
    </div>
    <div class="card-body">
        <form asp-action="Cadastro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProdutoId" class="control-label">Produto*</label>
                        <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.Produtos" required>
                            <option value="">Selecione um produto</option>
                        </select>
                        <span asp-validation-for="ProdutoId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LaboratorioId" class="control-label">Laboratório*</label>
                        <select asp-for="LaboratorioId" class="form-control" asp-items="ViewBag.Laboratorios" required>
                            <option value="">Selecione um laboratório</option>
                        </select>
                        <span asp-validation-for="LaboratorioId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome*</label>
                        <input asp-for="Nome" class="form-control" required />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Numero_Serie" class="control-label">Número de Série*</label>
                        <input asp-for="Numero_Serie" class="form-control" required />
                        <span asp-validation-for="Numero_Serie" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Num_Patrimonio" class="control-label">Nº Patrimônio*</label>
                        <input asp-for="Num_Patrimonio" class="form-control" required />
                        <span asp-validation-for="Num_Patrimonio" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CACalibracao" class="control-label">CA Calibração</label>
                        <input asp-for="CACalibracao" class="form-control" />
                        <span asp-validation-for="CACalibracao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CAVerificacao" class="control-label">CA Verificação</label>
                        <input asp-for="CAVerificacao" class="form-control" />
                        <span asp-validation-for="CAVerificacao" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="PeriodicidadeCalibracao" class="control-label">Periodicidade Calibração (dias)*</label>
                        <input asp-for="PeriodicidadeCalibracao" class="form-control" required />
                        <span asp-validation-for="PeriodicidadeCalibracao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="PeriodicidadeVerificacaoIntermediaria" class="control-label">Periodicidade Verificação (dias)*</label>
                        <input asp-for="PeriodicidadeVerificacaoIntermediaria" class="form-control" required />
                        <span asp-validation-for="PeriodicidadeVerificacaoIntermediaria" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DataColocacaoUso" class="control-label">Data Colocação em Uso*</label>
                        <input asp-for="DataColocacaoUso" type="date" class="form-control" required />
                        <span asp-validation-for="DataColocacaoUso" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CapacidadeMedicao" class="control-label">Capacidade de Medição*</label>
                        <input asp-for="CapacidadeMedicao" class="form-control" required />
                        <span asp-validation-for="CapacidadeMedicao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ResolucaoDivisaoEscala" class="control-label">Resolução/Divisão de Escala*</label>
                        <input asp-for="ResolucaoDivisaoEscala" class="form-control" required />
                        <span asp-validation-for="ResolucaoDivisaoEscala" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NumeroCertificadoCalibracao" class="control-label">Número Certificado Calibração</label>
                        <input asp-for="NumeroCertificadoCalibracao" class="form-control" />
                        <span asp-validation-for="NumeroCertificadoCalibracao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mt-4 pt-2">
                        <div class="form-check">
                            <input asp-for="Disponivel" class="form-check-input" />
                            <label asp-for="Disponivel" class="form-check-label">Disponível para uso</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <h5>Tags de Identificação</h5>
                    <div class="form-group">
                        <div id="tags-container" class="mb-2">
                        </div>
                        <div class="input-group">
                            <input type="text" id="tag-input" class="form-control" placeholder="Digite uma tag e clique em Adicionar">
                            <div class="input-group-append">
                                <button type="button" id="add-tag-btn" class="btn btn-outline-secondary">Adicionar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Cadastrar</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const addTagBtn = document.getElementById('add-tag-btn');
            const tagInput = document.getElementById('tag-input');
            const tagsContainer = document.getElementById('tags-container');
            let tagIndex = 0;

            addTagBtn.addEventListener('click', function () {
            const tagText = tagInput.value.trim();
            if (tagText) {
                const tagElement = document.createElement('span');
                tagElement.className = 'badge badge-light text-dark mr-2 p-2 d-inline-flex align-items-center';

                const textNode = document.createTextNode(tagText);

                const removeBtn = document.createElement('button');
                removeBtn.type = 'button';
                removeBtn.className = 'btn btn-danger btn-sm ml-2 p-0 px-2';
                removeBtn.innerHTML = '<span aria-hidden="true">&times;</span>';

                const hiddenInput = document.createElement('input');
                hiddenInput.type = 'hidden';
                hiddenInput.name = `Tags[0].Tag`;
                hiddenInput.value = tagText;

                tagElement.appendChild(textNode);
                tagElement.appendChild(removeBtn);
                tagElement.appendChild(hiddenInput);

                tagsContainer.appendChild(tagElement);

                removeBtn.addEventListener('click', function() {
                    tagsContainer.removeChild(tagElement);

                    tagInput.disabled = false;
                    addTagBtn.disabled = false;
                    tagInput.focus();
                });

                tagInput.value = '';
                tagInput.disabled = true;
                addTagBtn.disabled = true;

                }
            });

            tagInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    addTagBtn.click();
                }
            });

            const produtoSelect = document.getElementById('ProdutoId');
            const nomeInput = document.getElementById('Nome');

            produtoSelect.addEventListener('change', function() {
                const selectedOption = this.options[this.selectedIndex];

                if (this.value) {
                    nomeInput.value = selectedOption.text;
                } else {
                    nomeInput.value = '';
                }
            });
        });
    </script>
}