@model LaboratorioDeSoftware.Core.Entities.Equipamento

@{
    ViewData["Title"] = "Editar Equipamento";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Editar Equipamento</h4>
    </div>
    <div class="card-body">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Id" />

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Numero_Serie" class="control-label">Número de Série</label>
                        <input asp-for="Numero_Serie" class="form-control" readonly />
                        <span asp-validation-for="Numero_Serie" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Num_Patrimonio" class="control-label">Nº Patrimônio</label>
                        <input asp-for="Num_Patrimonio" class="form-control" />
                        <span asp-validation-for="Num_Patrimonio" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProdutoId" class="control-label">Produto</label>
                        <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.Produtos">
                            <option value="">Selecione um produto</option>
                        </select>
                        <span asp-validation-for="ProdutoId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LaboratorioId" class="control-label">Laboratório</label>
                        <select asp-for="LaboratorioId" class="form-control" asp-items="ViewBag.Laboratorios">
                            <option value="">Selecione um laboratório</option>
                        </select>
                        <span asp-validation-for="LaboratorioId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CACalibracao" class="control-label">CA Calibração</label>
                        <input asp-for="CACalibracao" class="form-control" />
                        <span asp-validation-for="CACalibracao" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CAVerificacao" class="control-label">CA Verificação</label>
                        <input asp-for="CAVerificacao" class="form-control" />
                        <span asp-validation-for="CAVerificacao" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CapacidadeMedicao" class="control-label">Capacidade de Medição*</label>
                        <input asp-for="CapacidadeMedicao" class="form-control" required />
                        <span asp-validation-for="CapacidadeMedicao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ResolucaoDivisaoEscala" class="control-label">Resolução/Divisão de Escala*</label>
                        <input asp-for="ResolucaoDivisaoEscala" class="form-control" required />
                        <span asp-validation-for="ResolucaoDivisaoEscala" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="PeriodicidadeCalibracao" class="control-label">Periodicidade Calibração (dias)</label>
                        <input asp-for="PeriodicidadeCalibracao" class="form-control" />
                        <span asp-validation-for="PeriodicidadeCalibracao" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="PeriodicidadeVerificacaoIntermediaria" class="control-label">Periodicidade Verificação (dias)</label>
                        <input asp-for="PeriodicidadeVerificacaoIntermediaria" class="form-control" />
                        <span asp-validation-for="PeriodicidadeVerificacaoIntermediaria" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Disponivel" class="control-label">Disponível</label>
                        <select asp-for="Disponivel" class="form-control">
                            <option value="true">Sim</option>
                            <option value="false">Não</option>
                        </select>
                        <span asp-validation-for="Disponivel" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <label asp-for="CapacidadeMedicao" class="control-label">Capacidade de Medição</label>
                <input asp-for="CapacidadeMedicao" class="form-control" />
                <span asp-validation-for="CapacidadeMedicao" class="text-danger"></span>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <h5>Tags de Identificação</h5>
                    <div class="form-group">
                        <div id="tags-container" class="mb-2">
                            @for (var i = 0; i < Model.Tags.Count; i++)
                            {
                                <span class="badge badge-light text-dark mr-2 p-2 d-inline-flex align-items-center">
                                    @Model.Tags.ElementAt(i).Tag
                                    <button type="button" class="btn btn-danger btn-sm ml-2 p-0 px-2 remove-tag-btn" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <input type="hidden" name="Tags[@i].Id" value="@Model.Tags.ElementAt(i).Id" />
                                    <input type="hidden" name="Tags[@i].Tag" value="@Model.Tags.ElementAt(i).Tag" />
                                    <input type="hidden" name="Tags[@i].EquipamentoId" value="@Model.Tags.ElementAt(i).EquipamentoId" />
                                </span>
                            }
                        </div>
                        <div class="input-group">
                            <input type="text" id="tag-input" class="form-control" placeholder="Digite uma nova tag e clique em Adicionar">
                            <div class="input-group-append">
                                <button type="button" id="add-tag-btn" class="btn btn-outline-secondary">Adicionar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const addTagBtn = document.getElementById('add-tag-btn');
            const tagInput = document.getElementById('tag-input');
            const tagsContainer = document.getElementById('tags-container');

            function reindexTags() {
                const tagElements = tagsContainer.querySelectorAll('.badge');
                tagElements.forEach((tagElement, index) => {
                    const hiddenInputs = tagElement.querySelectorAll('input[type="hidden"]');
                    hiddenInputs.forEach(input => {
                        const oldName = input.name;
                        const newName = oldName.replace(/\[\d+\]/, `[${index}]`);
                        input.name = newName;
                    });
                });
            }

            function attachRemoveEvent(button) {
                button.addEventListener('click', function(e) {
                    e.target.closest('.badge').remove();
                    reindexTags();
                });
            }

            document.querySelectorAll('.remove-tag-btn').forEach(attachRemoveEvent);

            function addNewTag() {
                const tagText = tagInput.value.trim();
                if (tagText) {
                    const tagIndex = tagsContainer.querySelectorAll('.badge').length;

                    const tagElement = document.createElement('span');
                    tagElement.className = 'badge badge-light text-dark mr-2 p-2 d-inline-flex align-items-center';

                    const textNode = document.createTextNode(tagText);

                    const removeBtn = document.createElement('button');
                    removeBtn.type = 'button';
                    removeBtn.className = 'btn btn-danger btn-sm ml-2 p-0 px-2';
                    removeBtn.innerHTML = '<span aria-hidden="true">&times;</span>';
                    attachRemoveEvent(removeBtn);

                    const idInput = document.createElement('input');
                    idInput.type = 'hidden';
                    idInput.name = `Tags[${tagIndex}].Id`;
                    idInput.value = '00000000-0000-0000-0000-000000000000';

                    const tagInputHidden = document.createElement('input');
                    tagInputHidden.type = 'hidden';
                    tagInputHidden.name = `Tags[${tagIndex}].Tag`;
                    tagInputHidden.value = tagText;
                    const equipamentoIdInput = document.createElement('input');
                    equipamentoIdInput.type = 'hidden';
                    equipamentoIdInput.name = `Tags[${tagIndex}].EquipamentoId`;
                    equipamentoIdInput.value = document.querySelector('input[name="Id"]').value;

                    tagElement.appendChild(textNode);
                    tagElement.appendChild(removeBtn);
                    tagElement.appendChild(idInput);
                    tagElement.appendChild(tagInputHidden);
                    tagElement.appendChild(equipamentoIdInput);

                    tagsContainer.appendChild(tagElement);

                    tagInput.value = '';
                    tagInput.focus();
                }
            }

            addTagBtn.addEventListener('click', addNewTag);
            tagInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    addNewTag();
                }
            });
        });
    </script>
}