@model LaboratorioDeSoftware.Core.Entities.CategoriaItem

@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Editar Categoria</h4>
    </div>
    <div class="card-body">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Id" />

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group form-check mt-4 pt-2">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}